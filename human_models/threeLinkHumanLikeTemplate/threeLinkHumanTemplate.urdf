<robot name="threeLinkHuman">
    <link name="foot">
        <inertial>
            <mass value="FOOTMASS"/>
            <origin xyz="0 0 HALFfootBETA" rpy="0 0 0" />
            <inertia ixx="FOOTINERTIAIXX" iyy="FOOTINERTIAIYY" izz="FOOTINERTIAIZZ" ixy="0" ixz="0" iyz="0"/>
        </inertial>

        <visual>
			<origin xyz="0 0 HALFfootBETA" rpy="0 0 0" />
            <geometry>
                <box size="FOOTGAMMA FOOTALFA FOOTBETA"/>
            </geometry>
        </visual>

        <collision>
			<origin xyz="0 0 HALFfootBETA" rpy="0 0 0" />
            <geometry>
                <box size="FOOTGAMMA FOOTALFA FOOTBETA"/>
            </geometry>
        </collision>
    </link>
    
    <link name="leg">
        <inertial>
            <mass value="LEGMASS"/>
            <origin xyz="0 0 HALFlegBETA" rpy="0 0 0" />
            <inertia ixx="LEGINERTIAIXX" iyy="LEGINERTIAIYY" izz="LEGINERTIAIZZ" ixy="0" ixz="0" iyz="0"/>
        </inertial>

        <visual>
            <origin xyz="0 0 HALFlegBETA" rpy="0 0 0" />
            <geometry>
                <box size="LEGGAMMA LEGALFA LEGBETA"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 HALFlegBETA" rpy="0 0 0" />
            <geometry>
                <box size="LEGGAMMA LEGALFA LEGBETA"/>
            </geometry>
        </collision>
    </link>
    
    <link name="torso">
        <inertial>
            <mass value="TORSOMASS"/>
            <origin xyz="0 0 HALFtorsoBETA" rpy="0 0 0" />
            <inertia ixx="TORSOINERTIAIXX" iyy="TORSOINERTIAIYY" izz="TORSOINERTIAIZZ" ixy="0" ixz="0" iyz="0"/>
        </inertial>

        <visual>
            <origin xyz="0 0 HALFtorsoBETA" rpy="0 0 0" />
            <geometry>
                <box size="TORSOGAMMA TORSOALFA TORSOBETA"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 HALFtorsoBETA" rpy="0 0 0" />
            <geometry>
                <box size="TORSOGAMMA TORSOALFA TORSOBETA"/>
            </geometry>
        </collision>
    </link>
        
    <joint name="ankle" type="revolute">
        <origin xyz="ANKLEVAL 0 FOOTBETA" rpy="0 0 0"/>
        <parent link="foot"/>
        <child link="leg"/>
        <dynamics damping="0.1" friction="0.0"/>
        <limit effort="30" velocity="1.0" lower="-10.0" upper="10.0" />
        <axis xyz="0 1 0" />
    </joint>
    
    <joint name="hip" type="revolute">
        <origin xyz="0 0 LEGBETA" rpy="0 0 0"/>
        <parent link="leg"/>
        <child link="torso"/>
        <dynamics damping="0.1" friction="0.0"/>
        <limit effort="30" velocity="1.0" lower="-10.0" upper="10.0" />
        <axis xyz="0 1 0" />
    </joint>

</robot>
